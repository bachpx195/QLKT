<div class="table-scrollable">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th></th>
      <th class="text-center"><%= t(:renter_code) %></th>
      <th class="text-center"><%= t(:renter_name) %></th>
      <th class="text-center"><%= t(:renter_birthday) %></th>
      <th class="text-center"><%= t(:renter_sex) %></th>
      <th class="text-center"><%= t(:renter_identity_card) %></th>
      <th class="text-center"><%= t(:renter_phone) %></th>
      <th class="text-center"><%= t(:renter_address) %></th>
      <th class="text-center"><%= t(:renter_career) %></th>
      <th class="text-center"><%= t(:renter_temporary_registration) %></th>
      <th class="text-center"><%= t(:renter_parent_name) %></th>
      <th class="text-center"><%= t(:renter_parent_phone) %></th>
      <th class="text-center"><%= t(:renter_owner) %></th>
      <th class="text-center"><%= t(:renter_available_status) %></th>
      <th class="text-center"><%= t(:renter_description) %></th>
      <th></th>
    </tr>
    </thead>

    <tbody class="item-container">
    <% @admin_renters.each do |admin_renter| %>
        <tr class="item-<%= admin_renter.id %>">
          <td class="text-center">
            <% if defined?(type) %>
                <%= render partial: 'shared/action_buttons', locals: { edit_url:  edit_ajax_form_renters_in_room_admin_renters_url(admin_renter)} %>
            <% else %>
                <%= render partial: 'shared/action_buttons', locals: { edit_url:  edit_admin_renter_url(admin_renter), duplicate_url: duplicate_admin_renters_path(id: admin_renter)} %>
            <% end %>

          </td>
          <td class="text-center"><%= admin_renter.code %></td>
          <td><%= admin_renter.name %></td>
          <td class="text-center"><%= convert_datetime(admin_renter.birthday) %></td>
          <td class="text-center"><%= convert_sex(admin_renter.sex) %></td>
          <td><%= admin_renter.identity_card %></td>
          <td><%= admin_renter.phone %></td>
          <td><%= admin_renter.address %></td>
          <td class="text-center"><%= convert_career(admin_renter.career) %></td>
          <td class="text-center"><%= convert_temporary_registration(admin_renter.temporary_registration) %></td>
          <td><%= admin_renter.parent_name %></td>
          <td><%= admin_renter.parent_phone %></td>
          <td class="text-center"><%= convert_owner(admin_renter.owner) %></td>
          <td class="text-center"><%= convert_available_status(admin_renter.available_status) %></td>
          <td><%= admin_renter.description %></td>
          <td class="text-center">
            <%= render partial: 'shared/action_buttons', locals: { delete_url: admin_renter } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-6">
    <%= will_paginate @admin_renters %>
  </div>
  <div class="col-md-6 margin-top-8 text-right">
    <%= page_entries_info @admin_renters %>
  </div>
</div>
