<p id="notice"><%= notice %></p>

<h1>Admin Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_permissions.each do |admin_permission| %>
      <tr>
        <td><%= admin_permission.name %></td>
        <td><%= admin_permission.value %></td>
        <td><%= admin_permission.description %></td>
        <td><%= link_to 'Show', admin_permission %></td>
        <td><%= link_to 'Edit', edit_admin_permission_path(admin_permission) %></td>
        <td><%= link_to 'Destroy', admin_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Permission', new_admin_permission_path %>
