<%= simple_form_for(@admin_group, remote: true, :html => { class: 'form-horizontal'} ) do |f| %>
    <%= f.error_notification %>

    <ul class="errors"></ul>

    <div class="form-group form-md-line-input">
      <label class="col-md-2 control-label">Tên nhóm</label>
      <div class="col-md-4">
        <%= f.input_field :name, class: 'bg-maxlength form-control', placeholder:"Nhập tên nhóm người dùng", maxlength: 30 %>
        <div class="form-control-focus"> </div>
      </div>

      <label class="col-md-2 control-label">Cấp bậc</label>
      <div class="col-md-4">
        <%= f.input_field :level, class: 'bg-maxlength form-control', placeholder:"Nhập level", :input_html => { :maxlength => 1 }, maxlength: 1 %>
        <div class="form-control-focus"> </div>
      </div>
    </div>

    <div class="form-group form-md-line-input">
      <label class="col-md-2 control-label">Mô tả</label>
      <div class="col-md-10">
        <%= f.input_field :description, as: :text, class: 'bg-maxlength form-control autosizeme', placeholder:"Nhập mô tả", maxlength: 500 %>
        <div class="form-control-focus"> </div>
      </div>
    </div>

    <div class="form-actions margin-top-10">
      <div class="row">
        <div class="col-md-12 text-right">
          <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i> Hủy</button>
          <%= f.button :button, class: 'btn green' do %>
              <i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu lại
          <% end %>
        </div>
      </div>
    </div>

<% end %>