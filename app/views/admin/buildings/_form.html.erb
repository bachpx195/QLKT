<%= simple_form_for(@admin_building, remote: true, :html => {class: 'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <ul class="errors"></ul>

      <div class="form-group form-md-line-input">
          <label class="col-md-2 control-label"><%=t(:building_parent)%>:</label>
          <div class="col-md-4">
            <%= f.input_field :parent_id, :collection => @admin_buildings,:label_method => :name,:value_method => :id, :include_blank => t(:building_selected), class: 'form-control' %>
          </div>
      </div>

      <div class="form-group form-md-line-input">
          <label class="col-md-2 control-label"><%=t(:building_code)%>:</label>
          <div class="col-md-4">
            <%= f.input_field :code, class: 'bg-maxlength form-control', placeholder: t(:building_placeholder_code), maxlength: 255 %>
          </div>

          <label class="col-md-2 control-label"><%= t(:building_name)%><span class="required" aria-required="true"> * </span></label>
          <div class="col-md-4">
            <%= f.input_field :name, class: 'bg-maxlength form-control', placeholder: t(:building_placeholder_name), maxlength: 255 %>
          </div>
        </div>

      <div class="form-group form-md-line-input">
        <label class="col-md-2 control-label"><%=t(:building_description)%>:</label>
        <div class="col-md-10">
          <%= f.input_field :description, as: :text, class: 'bg-maxlength form-control autosizeme', placeholder: t(:building_placeholder_description), maxlength: 500 %>
        </div>
      </div>

      <div class="form-actions margin-top-10">
        <div class="row">
          <div class="col-md-12 text-right">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i><%= t(:cancel)%></button>
            <%= f.button :button, class: 'btn green' do %>
                <i class="fa fa-floppy-o" aria-hidden="true"></i>  <%= t(:save) %>
            <% end %>
          </div>
        </div>
      </div>

<% end %>
