<div class="modal-dialog modal-lg">
  <div class="portlet light bordered">
    <div class="portlet-title">
      <div class="caption font-green">
        <span class="caption-subject bold uppercase"><i class="fa fa-bath"></i> Hợp đồng </span>
      </div>
      <div class="actions">
        <a class="btn btn-circle btn-icon-only btn-default" data-dismiss="modal" href="javascript:;">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </div>
    <div class="portlet-body">
      <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
          <div class="text-right">
            <a class="btn green btn-outline btn-circle btn-sm" data-remote="true" href="<%= agreement_form_new_admin_agreements_url(room_id: @agreement_room, building_id: @admin_building) %>"><i class="fa fa-plus"></i>Thêm</a>
          </div>
        </div>
      </div>
      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th></th>
            <th><%= t(:agreement_code) %></th>
            <th><%= t(:agreement_owner) %></th>
            <th class="text-center"><%= t(:agreement_start_date) %></th>
            <th class="text-center"><%= t(:agreement_duration) %></th>
            <th class="text-center"><%= t(:agreement_down_payment) %></th>
            <th class="text-center"><%= t(:agreement_month_pre_payment) %></th>
            <th class="text-center"><%= t(:agreement_pre_payment) %></th>
            <th></th>
          </tr>
          </thead>

          <tbody class="item-container">
          <% @admin_agreements.each do |admin_agreement| %>
              <tr>
                <td class="text-center">
                  <a class="btn btn-circle btn-icon-only btn-default popovers" data-remote="true" href="<%= agreement_form_edit_admin_agreements_url(admin_agreement) %>" data-container="body" data-trigger="hover" data-placement="top" data-content="<%= t(:edit) %>"><i class="icon-pencil"></i></a>
                </td>
                <td><%= admin_agreement.code %></td>
                <td><%= admin_agreement.owner.name %></td>
                <td class="text-center"><%= admin_agreement.start_date.strftime("%d/%m/%Y") %></td>
                <td class="text-center"><%= format_month(admin_agreement.duration) %></td>
                <td class="text-center"><%= format_money(admin_agreement.down_payment) %></td>
                <td class="text-center"><%= admin_agreement.month_pre_payment %></td>
                <td class="text-center"><%= format_money(admin_agreement.pre_payment) %></td>
                <td class="text-center">
                  <%= link_to raw('<i class="fa fa-trash-o"></i>'), agreement_form_destroy_admin_agreements_url(admin_agreement), method: :delete, data: {toggle: 'confirmation', placement: 'left', popout: false, remote: true}, class: "btn red btn-circle btn-icon-only btn-default" %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= will_paginate @admin_agreements %>
      </div>
      <div class="col-md-6 margin-top-8 text-right">
        <%= page_entries_info @admin_agreements %>
      </div>
    </div>
  </div>
</div>