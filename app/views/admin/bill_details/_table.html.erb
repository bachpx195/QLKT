<div class="table-scrollable">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th class="text-center"><%= t(:bill_details_bill) %></th>
      <th class="text-center"><%= t(:bill_details_service) %></th>
      <th class="text-center"><%= t(:bill_details_amount) %></th>
      <th class="text-center"><%= t(:bill_details_unit_price) %></th>
      <th class="text-center"><%= t(:bill_details_total) %></th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody class="item-container">
    <%= render 'bill_detail',:previous_label => t(:previous), :next_label => t(:next)%>
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-md-6">
    <%= will_paginate @admin_bill_details %>
  </div>
  <div class="col-md-6 margin-top-8 text-right">
    <%= page_entries_info @admin_bill_details %>
  </div>
</div>