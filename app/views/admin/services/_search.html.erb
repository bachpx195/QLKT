<%= simple_form_for :search, url: search_admin_services_path, remote: true, :method => :get, :html => {class: 'form-horizontal'} do |f| %>
  <div class="form-body">
    <div class="form-group form-md-line-input">
      <label class="col-md-2 control-label"><%= t(:service_building)%></label>
      <div class="col-md-4">
        <select name="building_id" id="building" class="form-control">
          <option value="0" selected><%= t(:building_selected) %></option>
          <% @admin_buildings.each do |building| %>
              <option value="<%= building.id %>" name="building_id"><%= building.name %></option>
          <% end %>
        </select>
      </div>
      <label class="col-md-2 control-label"><%= t(:service_name)%></label>
      <div class="col-md-4">
        <%= f.input_field :name, class: 'bg-maxlength form-control', placeholder: t(:service_placeholder_name), maxlength: 255 %>
        <div class="form-control-focus"></div>
      </div>
    </div>
  </div>

  <div class="form-actions margin-top-10">
    <div class="row">
      <div class="col-md-12 text-right">
        <%= f.button :button, class: 'btn green' do %>
            <i class="fa fa-search" aria-hidden="true"></i><%= t(:search)%>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
<!-- END FORM-->