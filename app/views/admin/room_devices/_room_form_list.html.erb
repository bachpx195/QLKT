<div class="modal-dialog modal-lg">
  <div class="portlet light bordered">
    <div class="portlet-title">
      <div class="caption font-green">
        <span class="caption-subject bold uppercase"><i class="fa fa-bath"></i> Quản lý thiết bị - <%= "KHU: #{@admin_room.building.name} - PHÒNG: #{@admin_room.name}" %></span>
      </div>
      <div class="actions">
        <a class="btn btn-circle btn-icon-only btn-default" data-dismiss="modal" href="javascript:;">
          <i class="fa fa-times"></i>
        </a>
      </div>
    </div>
    <div class="portlet-body">
      <div class="row">
        <div class="col-md-6">
        </div>
        <div class="col-md-6">
          <div class="text-right">
            <a class="btn green btn-outline btn-circle btn-sm" data-remote="true" href="<%= room_form_new_admin_room_devices_url %>"><i class="fa fa-plus"></i>Thêm</a>
          </div>
        </div>
      </div>

      <div class="table-scrollable">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th></th>
            <th><%= t(:room_device_name) %></th>
            <th class="text-center"><%= t(:room_device_amount) %></th>
            <th><%= t(:room_device_status) %></th>
            <th><%= t(:room_device_description) %></th>
            <th></th>
          </tr>
          </thead>

          <tbody class="second-form-item-container">
          <% @admin_room.room_devices.each do |admin_room_device| %>
              <tr class="second-form-item-<%= admin_room_device.id %>">
                <td class="text-center">
                  <a class="btn btn-circle btn-icon-only btn-default popovers" data-remote="true" href="<%= room_form_edit_admin_room_devices_url(admin_room_device) %>" data-container="body" data-trigger="hover" data-placement="top" data-content="<%= t(:edit) %>"><i class="icon-pencil"></i></a>
                </td>
                <td><%= admin_room_device.name %></td>
                <td class="text-center"><%= admin_room_device.amount %></td>
                <td><%= format_room_device_status(admin_room_device.status) %></td>
                <td><%= admin_room_device.description %></td>
                <td class="text-center">
                  <%= link_to raw('<i class="fa fa-trash-o"></i>'), room_form_destroy_admin_room_devices_url(admin_room_device), method: :delete, data: {toggle: 'confirmation', placement: 'left', popout: false, remote: true}, class: "btn red btn-circle btn-icon-only btn-default" %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /.modal-dialog -->